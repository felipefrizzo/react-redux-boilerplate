{
    "extends": "eslint-config-airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "global": {
        "connect": true
    },
    "rules": {
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "blocked-scopped-var": 0,
        "padded-blocks": 0,
        "no-console": 0,
        "id-length": 0,
        "no-unused-expressions": 0
    },
    "plugins": [
        "react"
    ]
}
